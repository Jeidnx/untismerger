{
  "compilerOptions": {
    "forceConsistentCasingInFileNames": true,
    "module": "CommonJS",
    "esModuleInterop": true,
    "rootDir": "./",
    "target": "ESNext",
    "skipLibCheck": true,
    "strict": false,
    "outDir": "./build",
    "alwaysStrict": true,
    "moduleResolution": "node",
    "removeComments": true,
    "resolveJsonModule": true
  },
  "include": [
    "src/"
  ]
}