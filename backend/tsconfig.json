{
  "compilerOptions": {
    "forceConsistentCasingInFileNames": true,
    "module": "ESNext",
    "esModuleInterop": true,
    "rootDir": "../",
    "target": "ES2017",
    "skipLibCheck": true,
    "strict": false,
    "outDir": "./out",
    "alwaysStrict": true,
    "moduleResolution": "node",
    "removeComments": true,
  },
  "include": [
    "src/"
  ]
}